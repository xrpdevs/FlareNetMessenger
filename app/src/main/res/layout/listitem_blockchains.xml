<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bcListIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/chainicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_qr_white" />

    <TextView
        android:id="@+id/bcListChainName"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="@string/blockchainname"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/bcListIcon"
        app:layout_constraintStart_toEndOf="@+id/bcListIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bcListTokenName"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="@string/tokenname"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bcListIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bcListChainName"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>